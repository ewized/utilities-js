{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "declaration": true,
    "emitDeclarationOnly": false,
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "dist",
    "jsx": "react-jsx"
  },
  "include": [
    "packages/*/src/**/*"
  ],
  "exclude": [
    "packages/*/src/**/*.stories.js",
    "packages/*/src/**/*.test.js",
  ]
}
